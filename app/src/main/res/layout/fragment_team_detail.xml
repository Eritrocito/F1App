<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".ui.DriverDetail.DriverDetailFragment">

    <TextView
        android:id="@+id/txt_team_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/driver_champ_back"
        android:layout_gravity="top"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:text="Ferrari" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="60dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/driverItemBack"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/driver_item_back"
                android:gravity="center"
                android:text="Info"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_countryofresidence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="country" />


            <TextView
                android:id="@+id/txt_foundation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="founded" />

            <TextView
                android:id="@+id/txt_debut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="debut" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/driverItemBack"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/driver_item_back"
                android:gravity="center_horizontal"
                android:text="Drivers"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_comp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Carlos Sainz, Spain" />

            <TextView
                android:id="@+id/txt_comp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Charles Leclerc, Monaco" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>