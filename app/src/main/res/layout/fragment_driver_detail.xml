<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".ui.DriverDetail.DriverDetailFragment">

    <TextView
        android:id="@+id/txt_driver_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="top"
        android:background="@drawable/driver_champ_back"
        android:gravity="center"
        android:text="Max Verstappen"
        android:textColor="@color/black"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/_60sdp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_driver_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/driverItemBack"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/driver_item_back"
                android:gravity="center"
                android:text="Personal info"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="birth" />


            <TextView
                android:id="@+id/txt_countryofresidence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="countryofresidence" />

            <TextView
                android:id="@+id/txt_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="salary" />

            <TextView
                android:id="@+id/txt_debut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="debut" />

            <TextView
                android:id="@+id/txt_first_victory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="first_victory" />

            <TextView
                android:id="@+id/txt_wcs_won"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="wcs_won" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/driverItemBack"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/driver_item_back"
                android:gravity="center_horizontal"
                android:text="Current team"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="Team name" />

            <TextView
                android:id="@+id/txt_team_nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="Team nationality" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>