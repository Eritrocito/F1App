<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".ui.DriverDetail.DriverDetailFragment"
    android:background="@color/driverDetailBack">


    <TextView
        android:id="@+id/txt_dateofbirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="dateofbirth"
        android:background="@color/driverItemBack"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txt_placeofbirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="placeofbirth"
        android:background="@color/driverItemBack"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt_countryofresidence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="countryofresidence"
        android:background="@color/driverItemBack"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="salary"
        android:background="@color/driverItemBack"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt_debut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="debut"
        android:background="@color/driverItemBack"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt_first_victory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="first_victory"
        android:background="@color/driverItemBack"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txt_wcs_won"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="wcs_won"
        android:background="@color/driverItemBack"
        android:textColor="@color/black"
        />

</LinearLayout>