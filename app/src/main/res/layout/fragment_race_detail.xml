<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RaceDetail.RaceDetailFragment"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/txt_gp_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:background="@drawable/driver_champ_back"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bahrain GP" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="60dp"
        android:layout_marginTop="448dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_gp_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/driverItemBack"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/driver_item_back"
                android:gravity="center"
                android:text="Info"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_circuit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="circuit_name" />

            <TextView
                android:id="@+id/txt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="city" />

            <TextView
                android:id="@+id/txt_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="country" />

            <TextView
                android:id="@+id/txt_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="length" />

            <TextView
                android:id="@+id/txt_debut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="debut" />

            <TextView
                android:id="@+id/txt_laps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/driverDetailBack"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:text="laps" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>