<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RaceDetail.RaceDetailFragment"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/txt_gp_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/driver_champ_back"
        android:layout_gravity="top"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:text="Bahrain GP" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="60dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/driverItemBack"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/driver_item_back"
                android:gravity="center"
                android:text="Info"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_circuit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="circuit_name"
                android:background="@color/driverDetailBack"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="city"
                android:background="@color/driverDetailBack"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="country"
                android:background="@color/driverDetailBack"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="length"
                android:background="@color/driverDetailBack"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_debut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="debut"
                android:background="@color/driverDetailBack"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txt_laps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="laps"
                android:background="@color/driverDetailBack"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>